{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "baseUrl": "./src",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    // This enables --noImplicitAny, --noImplicitThis, --alwaysStrict, --strictNullChecks
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "node"
  }
}
