{
  "name": "@jakedeichert/promise-repeater",
  "description": "Repeat promises until they resolve successfully or hit the maximum attempt limit",
  "version": "1.0.2",
  "author": "Jake Deichert",
  "repository": "github:jakedeichert/promise-repeater",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint . --ext ts,js",
    "test": "jest --verbose",
    "test:watch": "npm run test -- --watch",
    "format": "prettier '{src,test}/**/*.{js,ts,json}' '*.{js,ts,json}' --write",
    "format:check": "prettier '{src,test}/**/*.{js,ts,json}' '*.{js,ts,json}' --list-different",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc"
  },
  "devDependencies": {
    "@jakedeichert/eslint-config": "^4.0.5",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.9",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  }
}
