{
  "name": "@jakedeichert/promise-repeater",
  "description": "Repeat promises until they resolve successfully or hit the maximum attempt limit",
  "version": "2.0.2",
  "author": "Jake Deichert",
  "repository": "github:jakedeichert/promise-repeater",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint . --ext ts,js --ignore-pattern dist",
    "test": "jest --verbose",
    "test:watch": "npm run test -- --watch",
    "format": "prettier '{src,test}/**/*.{js,ts,json}' '*.{js,ts,json}' --write",
    "format:check": "prettier '{src,test}/**/*.{js,ts,json}' '*.{js,ts,json}' --list-different",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc"
  },
  "devDependencies": {
    "@jakedeichert/eslint-config": "^4.0.5",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.6.3"
  }
}
